<?xml version='1.0' encoding='utf-8'?>
<widget id="com.mishu.vendor" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>供应商版</name>
    <description>餐馆无忧（供应商版）</description>
    <author email="mayue@canguanwuyou.cn" href="http://www.canguanwuyou.cn/">餐馆无忧</author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <plugin name="cordova-plugin-splashscreen" version="2.1.0"/>
    <plugin name="cordova-plugin-camera" version="1.2.0"/>
    <plugin name="cordova-plugin-file" version="3.0.0"/>
    <plugin name="cordova-plugin-file-transfer" version="1.4.0"/>
    
    <access origin="*" />
    <access origin="bdapp:*" launch-external="yes"/>

    <allow-navigation href="*"/>
    
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="bdapp:*" launch-external="yes"/>
    <allow-navigation href="*"/>
    <allow-navigation href="cdvfile://*"/>
    
    <icon src="www/img/logo.png" />

    <platform name="android">
        <allow-intent href="market:*" />
        <allow-intent href="bdapp:*" launch-external="yes"/>

        <splash src="www/img/splash.png" density="land-hdpi"/>
        <splash src="www/img/splash.png" density="land-ldpi"/>
        <splash src="www/img/splash.png" density="land-mdpi"/>
        <splash src="www/img/splash.png" density="land-xhdpi"/>
        <splash src="www/img/splash.png" density="port-hdpi"/>
        <splash src="www/img/splash.png" density="port-ldpi"/>
        <splash src="www/img/splash.png" density="port-mdpi"/>
        <splash src="www/img/splash.png" density="port-xhdpi"/>
    </platform>

    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

    <preference name="SplashScreen" value="screen"/>
    <preference name="SplashScreenDelay" value="2000"/>
</widget>
